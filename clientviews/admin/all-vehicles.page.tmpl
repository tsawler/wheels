{{template "admin-base" .}}

{{define "title"}}All Vehicles - GoBlender Admin{{end}}

{{define "admin-title"}}All Vehicles{{end}}
{{define "content-title"}}All Vehicles{{end}}

{{define "content"}}
    <div class="table-responsive">
        <table id="itable" class="table table-striped table-bordered">
            <thead>
            <tr>
                <th>ID</th>
                <th>Year</th>
                <th>Make</th>
                <th>Model</th>
                <th>Trim</th>
                <th>Stock #</th>
                <th>VIN</th>
                <th>Status</th>
                <th>Created</th>
                <th>Updated</th>
            </tr>
            </thead>
            <tbody>

            </tbody>
        </table>
    </div>
{{end}}

{{define "js"}}

    <script>
        document.addEventListener("DOMContentLoaded", function(event) {
            $('#itable').DataTable({
                "processing": true,
                "order": [[ 1, "desc" ]],
                "serverSide": true,
                "stateSave": true,
                "paging": true,
                "search": {
                    "caseInsensitive": true
                },
                "ajax": {
                    "url": "/admin/inventory/all-vehicles-json",
                    "type": "POST",
                    data: function (d) {
                        return $.extend({}, d, {
                            "csrf_token": '{{.CSRFToken}}'
                        });
                    }
                },
                columns: [
                    {
                        "data": "id",
                        "name": "id",
                        "render": function (data, type, row, meta) {
                            var ID = row.id;
                            return "<a href='/admin/inventory/vehicle/" + ID + "'>" + data + "</a>"
                        }
                    },
                    {
                        "data": "year",
                        "name": "year",
                        "render": function (data, type, row, meta) {
                            var ID = row.id;
                            return "<a href='/admin/inventory/vehicle/" + ID + "'>" + data + "</a>"
                        }
                    },
                    {"data": "make", "name": "make"},
                    {"data": "model", "name": "model"},
                    {"data": "trim", "name": "trim"},
                    {"data": "stock_no", "name": "stock_no"},
                    {"data": "vin", "name": "vin"},
                    {"data": "status", "name": "status","searchable": false},
                    {"data": "created_at", "name": "created_at","searchable": false},
                    {"data": "created_at", "name": "updated_at","searchable": false}
                ]
            });
        });
    </script>

{{end}}